<section class="navbar">
    <%= render 'shared/navbar' %>
</section>
<section>
    <div class="col-lg-6">
    <%= form_for :recueil, url: recueils_path do |f| %>
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </p>
     
      <p>
        <%= f.label :text %><br>
        <%= f.text_area :text %>
      </p>
      <p>
        <%= f.label :price %><br>
        <%= f.number_field :price %>
      </p>
      
      <p>
        <%= f.label :picture %><br>
        <%= f.file_field :picture %>
      </p>
     
      <p>
        <%= f.submit %>
      </p>
    <% end %>
    </div>
</section>